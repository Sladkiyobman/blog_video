<article class="pos">
  <section class="post-head">
    <h1><%= @post.title%></h1>
    <small>
      <time><%= @post.created_at.to_date.strftime("%d, %B, %Y") %></time>
      |
      <%= link_to "Изменить", edit_post_path(@post) %> |
      <%= link_to "Удалить", posts_path(@post),method: :delete,data: {confirm: 'Вы уверены?'} %>
    </small>
  </section>

  <selection class="post-body">
    <%= @post.body %>
  </selection>
</article>
